<div class="container flex flex-col items-center mt-8">
  <h1 class="text-center mb-6"><%= t(".title") %></h1>

  <%= form_with(url: identity_password_reset_path, method: :patch, class: "flex flex-col gap-4 w-full max-w-sm") do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :sid, value: params[:sid] %>
    <%= form.password_field :password, label: false, placeholder: t(".password"), hint: "6 characters minimum.", required: true, autocomplete: "new-password" %>
    <%= form.password_field :password_confirmation, label: false, placeholder: t(".password_confirmation"), required: true, autocomplete: "new-password-confirmation" %>
    <%= form.submit "Save changes", class: "mt-4 btn btn-primary" %>
  <% end %>
</div>