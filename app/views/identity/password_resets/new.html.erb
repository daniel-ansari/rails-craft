<div class="container flex flex-col items-center mt-8">
  <h1 class="text-center mb-6"><%= t(".title") %></h1>

  <%= form_with(url: identity_password_reset_path, class: "flex flex-col gap-4 w-full max-w-sm") do |form| %>
    <%= form.email_field :email, placeholder: t(".email"), required: true, autofocus: true %>
    <%= form.submit t(".send_password_reset_email"), class: "mt-4 btn btn-primary" %>
  <% end %>
</div>