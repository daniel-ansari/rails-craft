<h1 class="text-center mb-6"><%= t(".title") %></h1>

<%= form_with(url: sign_in_path, class: "flex flex-col gap-4 w-full max-w-sm") do |form| %>
  <%= form.email_field :email, tabindex: 1, label: false, placeholder: t("email"), required: true, autocomplete: "email", autofocus: true %>
  <div class="flex flex-col gap-1">
    <%= link_to t("forgot_password"), new_identity_password_reset_path, tabindex: 3, class: "link link-primary ml-auto" %>
    <%= form.password_field :password, tabindex: 2, label: false, placeholder: t("password"), required: true, autocomplete: "current-password" %>
  </div>
  <%= form.submit t("sign_in"), id: :sign_in, class: "mt-4 btn btn-primary" %>
<% end %>

<div class="mt-4">
  <%= t(".no_account_yet") %>
  <%= link_to t("sign_up"), sign_up_path, class: "link link-primary" %>
</div>
