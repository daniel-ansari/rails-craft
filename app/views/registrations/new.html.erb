<h1 class="text-center mb-6"><%= t(".title") %></h1>

<%= form_with(model: @user || User.new, url: sign_up_path, class: "flex flex-col gap-4 w-full max-w-sm") do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.text_field :name, label: false, placeholder: t("name"), required: true, autocomplete: "name", autofocus: true %>
  <%= form.email_field :email, label: false, placeholder: t("email"), required: true, autocomplete: "email", autofocus: true %>
  <%= form.password_field :password, label: false, placeholder: t("password"), hint: "6 characters minimum.", required: true, autocomplete: "current-password" %>
  <%= form.password_field :password_confirmation, label: false, placeholder: t("password_confirmation"), required: true, autocomplete: "current-password-confirmation" %>
  <%= form.submit t("sign_up"), id: :sign_up, class: "mt-4 btn btn-primary" %>
<% end %>

<div class="mt-4">
  <%= t(".already_have_an_account") %>
  <%= link_to t("login"), sign_in_path, class: "link link-primary" %>
</div>