<div class="navbar shadow">
  <div class="flex-1">
    <%= link_to "Album Catalog", user_dashboard_path, class: "btn btn-ghost text-xl" %>
  </div>
  <div class="dropdown dropdown-end">
    <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar" id="navbar_toggle">
      <div class="w-10 rounded-full">
        <img
          alt="<%= Current.user.name %>"
          src="https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" />
      </div>
    </div>
    <ul
      tabindex="0"
      class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
      <li>
        <p class="">
          <%= Current.user.email %> <br />
          <%= t("navbar.greeting", name: Current.user.name) %>
        </p>
      </li>
      <li>
          <%= link_to t("navbar.sessions"), user_sessions_path %>
      </li>
        <li>
          <%= link_to t("navbar.password"), edit_password_path %>
        </li>
        <li>
          <%= button_to t("sign_out"), Current.session, method: :delete, id: :sign_out %>
      </li>
    </ul>
    </div>
  </div>
</div>
